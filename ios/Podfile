# Uncomment this line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Firebase kullanacaksanız yorumu kaldırın:
  # pod 'Firebase/Analytics'
  # pod 'Firebase/Crashlytics'
  # pod 'Firebase/Messaging'
  # pod 'Firebase/Auth'
  # pod 'Firebase/Firestore'
  # pod 'Firebase/Storage'
  
  # Google Maps kullanacaksanız yorumu kaldırın:
  pod 'GoogleMaps'
  
  # Diğer custom pod'lar buraya eklenebilir
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # iOS deployment target ayarı
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      
      # Bitcode devre dışı (Flutter için gerekli)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Swift versiyonu
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # Excluded Architectures (M1 Mac simülatör desteği için)
      config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
      
      # Code signing ayarları (geliştirme için)
      config.build_settings['CODE_SIGN_IDENTITY'] = ''
      
      # Warnings ayarları
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
    end
  end
end

# ============================================================================
# KURULUM ADIMLARI
# ============================================================================
#
# 1. Podfile'ı güncelledikten sonra:
#    cd ios
#    pod install
#    cd ..
#
# 2. CocoaPods cache temizleme (gerekirse):
#    cd ios
#    pod deintegrate
#    pod cache clean --all
#    pod install
#    cd ..
#
# 3. iOS simülatör build:
#    flutter run
#
# 4. iOS cihaz build:
#    flutter run -d <device_id>
#
# ============================================================================
# M1/M2 MAC KULLANICILARI İÇİN
# ============================================================================
#
# Eğer M1/M2 Mac kullanıyorsanız ve pod install hatası alıyorsanız:
#
# 1. Rosetta ile terminal açın:
#    arch -x86_64 /bin/zsh
#
# 2. CocoaPods'u yeniden yükleyin:
#    sudo gem install ffi
#    sudo gem install cocoapods
#
# 3. Pod install:
#    cd ios
#    arch -x86_64 pod install
#    cd ..
#
# Alternatif: ffi gem'ini ayrıca yükleyin:
#    sudo gem install ffi -- --enable-libffi-alloc
#
# ============================================================================
# FİREBASE KURULUMU (İsteğe Bağlı)
# ============================================================================
#
# 1. Firebase Console'dan GoogleService-Info.plist dosyasını indirin
#
# 2. Xcode'da projeyi açın:
#    open ios/Runner.xcworkspace
#
# 3. GoogleService-Info.plist'i Runner klasörüne sürükleyin
#    (Copy items if needed seçeneğini işaretleyin)
#
# 4. Yukarıdaki Firebase pod'larının yorumlarını kaldırın
#
# 5. Pod install çalıştırın:
#    cd ios && pod install && cd ..
#
# 6. Info.plist'e gerekli izinleri ekleyin (aşağıda detaylar var)
#
# ============================================================================
# PUSH NOTIFICATION KURULUMU
# ============================================================================
#
# 1. Apple Developer Console'da:
#    - App ID oluşturun
#    - Push Notifications capability'sini aktif edin
#    - APNs Certificate oluşturun
#
# 2. Xcode'da:
#    - Signing & Capabilities sekmesine gidin
#    - + Capability → Push Notifications ekleyin
#    - Background Modes → Remote notifications işaretleyin
#
# 3. Firebase Console'da:
#    - APNs Authentication Key'i yükleyin
#
# 4. AppDelegate.swift'e kod ekleyin (gerekirse)
#
# ============================================================================
# İZİNLER (Info.plist'e eklenecek)
# ============================================================================
#
# Xcode'da Runner/Info.plist dosyasını açın ve gerekli izinleri ekleyin:
#
# Kamera İzni:
# <key>NSCameraUsageDescription</key>
# <string>Fotoğraf çekmek için kamera erişimi gereklidir.</string>
#
# Foto Galerisi İzni:
# <key>NSPhotoLibraryUsageDescription</key>
# <string>Fotoğraf seçmek için galeri erişimi gereklidir.</string>
#
# Konum İzni (Kullanım sırasında):
# <key>NSLocationWhenInUseUsageDescription</key>
# <string>Konum bilginizi almak için izin gereklidir.</string>
#
# Konum İzni (Her zaman):
# <key>NSLocationAlwaysUsageDescription</key>
# <string>Arka planda konum takibi için izin gereklidir.</string>
#
# Mikrofon İzni:
# <key>NSMicrophoneUsageDescription</key>
# <string>Ses kaydı için mikrofon erişimi gereklidir.</string>
#
# Contacts İzni:
# <key>NSContactsUsageDescription</key>
# <string>Kişilerinize erişmek için izin gereklidir.</string>
#
# Calendar İzni:
# <key>NSCalendarsUsageDescription</key>
# <string>Takviminize erişmek için izin gereklidir.</string>
#
# ============================================================================
# URL SCHEME KURULUMU (Deep Linking için)
# ============================================================================
#
# Info.plist'e ekleyin:
#
# <key>CFBundleURLTypes</key>
# <array>
#   <dict>
#     <key>CFBundleTypeRole</key>
#     <string>Editor</string>
#     <key>CFBundleURLName</key>
#     <string>com.example.insaatyonetim</string>
#     <key>CFBundleURLSchemes</key>
#     <array>
#       <string>insaatyonetim</string>
#     </array>
#   </dict>
# </array>
#
# ============================================================================
# SORUN GİDERME
# ============================================================================
#
# "No such module" hatası:
# 1. cd ios
# 2. pod deintegrate
# 3. pod install
# 4. flutter clean
# 5. flutter pub get
#
# "Code signing" hatası:
# 1. Xcode'da Runner.xcworkspace'i açın
# 2. Signing & Capabilities'e gidin
# 3. Team seçin veya Personal Team kullanın
#
# "Architecture" hatası (M1 Mac):
# 1. Yukarıdaki "Excluded Architectures" ayarını kontrol edin
# 2. Rosetta ile terminal kullanın
#
# Pod install çok yavaş:
# 1. CocoaPods cache temizleyin: pod cache clean --all
# 2. Pod repo güncelleyin: pod repo update
#
# Firebase hatası:
# 1. GoogleService-Info.plist'in doğru yerde olduğunu kontrol edin
# 2. Bundle ID'lerin eşleştiğini kontrol edin
#
# ============================================================================
# PERFORMANS İPUÇLARI
# ============================================================================
#
# 1. Pod install'ı hızlandırma:
#    - Parallel downloads: Yeni CocoaPods versiyonları otomatik yapar
#    - CDN kullanımı: source 'https://cdn.cocoapods.org/' (otomatik)
#
# 2. Build süresini azaltma:
#    - Xcode build settings'de Optimization Level'ı ayarlayın
#    - Debug build'de "Enable Bitcode" = NO
#    - Derived Data'yı temizleyin: Xcode → Preferences → Locations
#
# 3. App size'ı küçültme:
#    - Bitcode kullanmayın (zaten kapalı)
#    - Gereksiz pod'ları kaldırın
#    - App thinning kullanın (otomatik)
#
# ============================================================================
# VERSİYON GÜNCELLEMESİ
# ============================================================================
#
# iOS deployment target güncelleme:
# 1. Podfile'da platform :ios değerini değiştirin
# 2. Xcode'da project settings'den Deployment Target'ı güncelleyin
# 3. pod install çalıştırın
#
# Swift version güncelleme:
# 1. Xcode'da Build Settings → Swift Language Version
# 2. Podfile'da SWIFT_VERSION'ı güncelleyin
# 3. pod install çalıştırın
#
# ============================================================================